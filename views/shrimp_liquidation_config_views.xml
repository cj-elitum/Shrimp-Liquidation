<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shrimp_liquidation_config_action_packages" model="ir.actions.act_window">
        <field name="name">Packages</field>
        <field name="res_model">shrimp_liquidation.liquidation.package</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--    Create the basic tree for package-->
    <record id="shrimp_liquidation_config_package_tree" model="ir.ui.view">
        <field name="name">shrimp_liquidation_config_package_tree</field>
        <field name="model">shrimp_liquidation.liquidation.package</field>
        <field name="arch" type="xml">
            <tree string="Packages">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--    Create a basic form for package-->
    <record id="shrimp_liquidation_config_package_form" model="ir.ui.view">
        <field name="name">shrimp_liquidation_config_package_form</field>
        <field name="model">shrimp_liquidation.liquidation.package</field>
        <field name="arch" type="xml">
            <form string="Package">
                <field name="name"/>
            </form>
        </field>
    </record>

</odoo>